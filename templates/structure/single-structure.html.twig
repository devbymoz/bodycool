{% extends 'base.html.twig' %}

{% block title %}Structure : {{ structure.getName }}{% endblock %}
{% block title_h1 %}
    {% if is_granted('ROLE_ADMIN') %}
        Structure n° {{ structure.id }}
    {% else %}
        Votre Structure
    {% endif %}
{% endblock %}

{% block content %}
   {#  {{ form_start(form, { 'attr': {'class': 'form-edit-franchise'} }) }}   #}
        <section class="block-top-page-single">
            <div class="block-left">
                <h2>{{ structure.getName }}</h2>
                <p><strong>Franchise : </strong>
                    {% if 'ROLE_FRANCHISE' in app.user.roles %}
                    <a href="{{ path('app_franchise_unique', {id: franchise.id}) }}">{{ franchise.getName|capitalize }}</a>
                    {% endif %}
                    {{ franchise.getName|capitalize }}
                </p>
            </div>
            <div class="dividing-border"></div>
            <div class="block-right">
                {% if franchise.active %}
                    <h3>La structure est active</h3>
                {% else %}
                    <h3>La structure est désactivée</h3>
                {% endif %}
                <div class="check-toggle{{ noAccess }} state-franchise">
                   {#  {{ form_widget(form.active, {'id': franchise.id, 'attr': {'class': 'form-add-franchise', 'value': franchise.id} })}} #}
                    <label class="toggle-label" for="{{ franchise.id }}">
                        <span class="btn-toggle"></span>
                    </label>
                </div>
            </div>
        </section>

        <div class="dividing-border"></div>

        <section class="block-info-page-single">
            <div class="block-left">
                <p><strong>Contrat n° : </strong> {{ structure.contractNumber }}</p>
                <p><strong>Adresse : </strong> {{ structure.address }}</p>
            </div>
            <div class="block-right">
                <p><strong>Gestionnaire : </strong> {{ userAdminStructure.getFirstname|capitalize }} {{ userAdminStructure.getLastname|capitalize }}</p>
                <p><strong>Téléphone : </strong> {{ structure.phone }}</p>
            </div>
        </section>

        <div class="dividing-border"></div>

