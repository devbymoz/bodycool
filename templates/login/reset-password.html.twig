{% extends 'base-login.html.twig' %}

{% block title %}Mot de passe oublié ?{% endblock %}
{% block title_h1 %}Mot de passe oublié ?{% endblock %}

{% block content %}
    <p class="light-text">Indiquez l'adresse email de votre compte.</p>
    <div class="block-form-login">
        {{ form_start(formResetPassword) }}
            <div class="block-input">
                {{ form_label(formResetPassword.email)}}
                {{ form_widget(formResetPassword.email)}}
                <div class="error-form">
                    {{ form_errors(formResetPassword.email) }}
                </div>
            </div>    
            <button class="btn-primary form-btn" type="submit">Réinitialiser mon mot de passe</button>
        {{ form_end(formResetPassword) }}
    </div> 
{% endblock %}