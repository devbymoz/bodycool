{% extends 'base-login.html.twig' %}

{% block title %}Connectez-vous{% endblock %}
{% block title_h1 %}Connectez-vous{% endblock %}

{% block content %}            
    <p class="light-text">Cette plateforme est dédiée aux franchisés de la marque BodyCool.</p>
    <div class="block-form-login">
        {% if error %}
            <div class="error-form">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <form action="{{ path('app_connexion') }}" method="post">
            <div class="block-input">
                <label for="username">Email</label>
                <input class="input" type="email" id="username" name="_username" value="{{ last_username }}" placeholder="Entrez votre email" required/>
            </div>
            <div class="block-input">
                <label for="password">Mot de passe</label>
                <input class="input" type="password" id="password" name="_password" placeholder="Entrez votre mot de passe" required />
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <a href="{{ path('app_mot_de_passe_perdu') }}">Mot de passe oublié ?</a>
            <button class="btn-primary form-btn" type="submit">Se connecter</button>
        </form>
    </div>   
{% endblock %}