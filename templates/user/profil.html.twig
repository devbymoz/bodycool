{% extends 'base.html.twig' %}
  
{% block title %}Mon profil{% endblock %}
{% block title_h1 %}Mon profil{% endblock %}

{% block content %}
    <section class="block-simple-form">
        <h2>Inscrit en tant que : {{ app.user.roles|first|slice(5)|replace({'_': ' '})|capitalize}}</h2>
        {{ form_start(formEditUser) }}
            <section class="change-avatar-profil">
                <div>
                    <img class="user-picture" src="{{ asset('/images/avatar/' ~ user.avatar) }}" alt="Photo de profil" height=130 width=130>
                    <p class="text-light text-xs detail-select-avatar">Taille maximale 2Mo</p>
                </div>
                <div class="btn-change-delete-picture-profil">
                    <div class="input-file select-avatar">
                        {{ form_label(formEditUser.avatar) }}
                        {{ form_widget(formEditUser.avatar) }}
                        <span>Séléctionner une photo</span>
                    </div>
                    <div class="style-btn btn-xs btn-white delete-avatar">Supprimer</div>
                    <div class="error-form">
                        {{ form_errors(formEditUser.avatar) }}
                    </div>
                </div>
            </section>
            <div class="dividing-border"></div>

            <section class="edit-profil">
                <p class="light-text text-light">Merci de contacter l’équipe technique pour modifier les informations suivantes</p>
                <div class="block-input">
                    <label for="firstname">Prénom</label>
                    <input class="input" type="text" name="" value="{{ user.firstname|capitalize}}" disabled>
                </div>
                <div class="block-input">
                    <label for="lastname">Nom</label>
                    <input class="input" type="text" name="" value="{{ user.lastname|capitalize}}" disabled>
                </div>
                <div class="block-input">
                    <label for="lastname">Numéro de téléphone</label>
                    <input class="input" type="text" name="" value="{{ user.phone}}" disabled>
                </div>
                <div class="block-input">
                    <label for="email">Email</label>
                    <input class="input" type="email" name="" value="{{ user.email}}" disabled>
                </div>
            </section>
            {{ form_widget(formEditUser.save) }}
        {{ form_end(formEditUser) }} 
    </section>
{% endblock %} 
