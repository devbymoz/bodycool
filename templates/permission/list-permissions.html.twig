{% extends 'base.html.twig' %}

{% block title %}Liste des permissions{% endblock %}
{% block title_h1 %}Les permissions{% endblock %}

{% block content %}
    <section class="block-list-permissions">
        <h2>{{ nbPermission }} permissions</h2> 
        <div class="block-cards-lists-permissions">
            {% for permission in permissions %}
                <article class="card-permission-list">
                    <h3>{{ permission.name|capitalize }}</h3>
                    <p>{{ permission.description|capitalize }}</p>
                </article>
            {% else %}
                <h3>Aucune permission disponible</h3>
            {% endfor %}
        </div>
        <a href="{{ path('app_ajouter_permission') }}"><button class="btn-secondary">Nouvelle permission</button></a>
    </section>
{% endblock %}