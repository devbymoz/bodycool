{# Template de base pour les pages en lien avec la connexion #}
{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block header %}
    <header class="main-header format-page-login">
        <a href="{{ path('app_connexion') }}" class="logo">
            <img src="{{ asset('/images/others/logo-bodycool.svg') }}" alt="Logo bodycool" height=42 width=auto>
        </a> 
        {% if app.request.uri != absolute_url(path('app_connexion')) %}
            <a class="back-connexion" href="{{ path('app_connexion') }}"></a>
        {% endif %}
    </header>
{% endblock %}

{% block main %}           
    <main class="container-login">
        <div class="main-title-page">
            <h1>{% block title_h1 %}{% endblock %}</h1>
                <div class="border-h1"></div> 
        </div>

        {% for message in app.flashes('notice') %}
            <div class="flash-notice notice">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('success') %}
            <div class="flash-notice success">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('exception') %}
            <div class="flash-notice exception">
                {{ message }}
            </div>
        {% endfor %}

        <div class="block-login">           
            {% block content %}{% endblock %} 
        </div>
        <div class="background-login"></div>        
    </main> 
    <footer class="footer-login">
        <p class="text-xs light-text">Si vous rencontrez un probl√®me pour vous connecter, merci de contacter votre conseiller technique</p>
    </footer>    
{% endblock %} 

{% block js_after %}{% endblock %}   

